{% extends 'base.html.twig' %}

{% block title %}Lost in Love{% endblock %}

{% block body %}
<section class="error-404-section">
    <div class="container">
        <div class="error-404-card fade-in-up">
            {# Decorative hearts #}
            <div class="decorative-hearts mb-3">
                <i class="bi bi-heart-fill floating-heart delay-1"></i>
                <i class="bi bi-heart-fill floating-heart delay-2"></i>
                <i class="bi bi-heart-fill floating-heart delay-3"></i>
            </div>

            {# 404 Number #}
            <div class="error-404-number">404</div>

            {# Message #}
            <p class="error-404-message">Error 404.</p>
            <p class="error-404-submessage">You cannot escape loving Yassine.</p>

            {# Divider #}
            <div class="elegant-divider my-4">
                <span class="divider-line"></span>
                <i class="bi bi-heart-fill divider-heart"></i>
                <span class="divider-line"></span>
            </div>

            {# Return button #}
            <a href="{{ path('app_home') }}" class="btn btn-valentine btn-lg">
                <i class="bi bi-house-heart me-2"></i>Return to Our Story
            </a>
        </div>
    </div>
</section>
{% endblock %}
